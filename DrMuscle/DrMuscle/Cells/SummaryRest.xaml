                    HorizontalOptions="CenterAndExpand" />
                <Label
                    Text="{Binding SinceTime}"
                    Font="Bold,17"
                    Style="{StaticResource LabelStyle}"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    TextColor="Black" />
                <Label
                    Text="{Binding LastWorkoutText}"
                    Style="{StaticResource LabelStyle}"
