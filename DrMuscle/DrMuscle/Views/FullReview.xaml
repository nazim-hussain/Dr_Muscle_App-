                    Spacing="10">

                    <t:DrMuscleButton
                        x:Name="ReviewButton"
                        VerticalOptions="EndAndExpand"
                        Text="Rate 5 stars"
                        Style="{StaticResource buttonStyle}"
                        Clicked="ReviewButton_Clicked"
                        HorizontalOptions="FillAndExpand"
                        Margin="0,0"
                        HeightRequest="60"
                        CornerRadius="0" />
